<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd ">

	<bean id="dataSource"
		class="com.yqjr.framework.component.datasource.FrameworkDataSource">
		<property name="dataSources">
			<list>
				<bean class="com.yqjr.framework.component.datasource.DataSource">
					<property name="id" value="payment" />
					<property name="dataSource" ref="ds1" />
				</bean>
			</list>
		</property>
	</bean>

	<bean id="ds1" class="com.mchange.v2.c3p0.ComboPooledDataSource">
		<property name="driverClass" value="oracle.jdbc.driver.OracleDriver" />
		<property name="jdbcUrl" value="jdbc:oracle:thin:@10.20.133.106:1521:orcl1" />
		<property name="user" value="esb" />
		<property name="password" value="esb" />
		<property name="maxPoolSize" value="20" />
		<property name="minPoolSize" value="5" />
		<property name="initialPoolSize" value="5" />
		<property name="maxIdleTime" value="600" />
		<property name="idleConnectionTestPeriod" value="600" />
	</bean>

</beans>