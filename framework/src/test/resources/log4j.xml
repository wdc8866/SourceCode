<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j='http://jakarta.apache.org/log4j/'>

	<!-- appender defined -->

	<!-- root -->
	<appender name="dailyRolling"
		class="com.yqjr.framework.component.log.appender.DailyAndSizeRollingFileAppender">
		<param name="encoding" value="UTF-8" />
		<param name="File" value="d:/text.log" />
		<param name="Append" value="true" />
		<param name="MaxFileSize" value="10MB" />
		<param name="MaxBackupIndex" value="10" />
		<param name="BufferedIO" value="false" />
		<param name="BufferSize" value="8192" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{MM-dd HH:mm:ss.SSS} %-6p [%-10c{1}] %m%n" />
		</layout>
	</appender>

	<appender name="stdout" class="org.apache.log4j.ConsoleAppender">
		<param name="Encoding" value="UTF-8" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern"
				value="%-d{yyyy-MM-dd HH:mm:ss} %-5p %-5c{3}:%L %x -> %m%n" />
		</layout>
	</appender>

	<!-- logger defined -->

	<logger name="com.yqjr" additivity="false">
		<level value="debug" />
		<appender-ref ref="dailyRolling" />
		<appender-ref ref="stdout" />
	</logger>

	<logger name="framework" additivity="false">
		<level value="debug" />
		<appender-ref ref="dailyRolling" />
		<appender-ref ref="stdout" />
	</logger>

	<!-- root -->
	<root>
		<priority value="debug" />
	</root>

</log4j:configuration>